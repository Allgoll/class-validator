{
    "version": "2.0.3",
    "compilerOptions": {
        "outDir": "build/es",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "lib": ["es6"],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
